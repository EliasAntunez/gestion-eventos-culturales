<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="500.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/17" stylesheets="@/css/eventos/styles-listaeventos.css" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gestioneventos.controller.eventos.ListaEventosController">
    <top>
        <VBox spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <!-- Flecha y título en la misma fila -->
                <HBox alignment="CENTER_LEFT" spacing="10.0" styleClass="titulo-personas">
                    <children>
                        <Button fx:id="btnVolver" mnemonicParsing="false" text="← Volver"/>
                        <Label fx:id="labelGestion" text="Gestión de Eventos">
                            <font>
                                <Font name="System Bold" size="18.0" />
                            </font>
                        </Label>
                    </children>
                </HBox>
                <!-- Barra de búsqueda -->
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <children>
                        <TextField fx:id="txtBuscar" promptText="Buscar por nombre, fecha o lugar" HBox.hgrow="ALWAYS" />
                        <Button fx:id="btnBuscar" mnemonicParsing="false" text="Buscar" />
                    </children>
                </HBox>
            </children>
            <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </BorderPane.margin>
        </VBox>
    </top>
    <center>
        <!-- Tabla de eventos -->
        <TableView fx:id="tablaEventos" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <columns>
            <TableColumn fx:id="colId" prefWidth="50.0" text="ID" />
            <TableColumn fx:id="colNombre" prefWidth="120.0" text="Nombre" />
            <TableColumn fx:id="colFecha" prefWidth="100.0" text="Fecha" />
            <TableColumn fx:id="colLugar" prefWidth="120.0" text="Lugar" />
            <TableColumn fx:id="colTipo" prefWidth="100.0" text="Tipo" />
            <TableColumn fx:id="colOrganizador" prefWidth="120.0" text="Organizador" />
            <TableColumn fx:id="colEstado" prefWidth="80.0" text="Estado" />
        </columns>
        <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </BorderPane.margin>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
        </TableView>
    </center>
    <bottom>
        <!-- Barra inferior con botones de acción -->
        <HBox alignment="CENTER_RIGHT" spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="btnNuevo" mnemonicParsing="false" text="Nuevo Evento" />
                <Button fx:id="btnEditar" mnemonicParsing="false" text="Editar" />
                <Button fx:id="btnEliminar" mnemonicParsing="false" text="Eliminar" />
            </children>
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </BorderPane.margin>
        </HBox>
    </bottom>
</BorderPane>