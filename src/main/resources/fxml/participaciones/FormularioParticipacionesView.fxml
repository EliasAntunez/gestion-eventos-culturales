<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="500.0" prefWidth="650.0" xmlns="http://javafx.com/javafx/17" 
            stylesheets="@/css/participaciones/styles-formularioparticipaciones.css" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.gestioneventos.controller.participaciones.FormularioParticipacionesController">
    <top>
        <VBox spacing="15.0" BorderPane.alignment="CENTER">
            <children>
                <!-- Encabezado -->
                <HBox alignment="CENTER_LEFT" styleClass="titulo-formulario">
                    <children>
                        <Label fx:id="lblTitulo" text="Agregar Participante" styleClass="titulo-vista" />
                    </children>
                </HBox>
                
                <!-- Informaci칩n del evento -->
                <VBox spacing="8.0" styleClass="info-evento">
                    <children>
                        <Label text="Evento seleccionado:" styleClass="label-subtitle" />
                        <GridPane hgap="15.0" vgap="8.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="80.0" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="150.0" prefWidth="200.0" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            </rowConstraints>
                            <children>
                                <Label text="Nombre:" />
                                <Label fx:id="lblNombreEvento" text="[Nombre del evento]" GridPane.columnIndex="1" />
                                <Label text="Fecha:" GridPane.rowIndex="1" />
                                <Label fx:id="lblFechaEvento" text="[Fecha del evento]" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                <Label text="Tipo:" GridPane.rowIndex="2" />
                                <Label fx:id="lblTipoEvento" text="[Tipo de evento]" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                            </children>
                        </GridPane>
                    </children>
                </VBox>
                
                <Separator styleClass="separator" />
            </children>
            <BorderPane.margin>
                <Insets bottom="5.0" left="15.0" right="15.0" top="15.0" />
            </BorderPane.margin>
        </VBox>
    </top>
    
    <center>
        <!-- Selecci칩n de persona -->
        <VBox spacing="15.0" BorderPane.alignment="CENTER">
            <children>
                <Label text="Buscar personas para agregar como participantes:" styleClass="label-subtitle" />
                
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <children>
                        <TextField fx:id="txtBuscarPersona" promptText="Nombre, apellido o DNI" HBox.hgrow="ALWAYS" />
                        <Button fx:id="btnBuscar" text="Buscar" onAction="#buscarPersonas"/>
                    </children>
                </HBox>
                
                <!-- Lista de personas disponibles -->
                <VBox spacing="5.0" VBox.vgrow="ALWAYS">
                    <children>
                        <Label text="Seleccione una persona para agregarla como participante:" />
                        <TableView fx:id="tablaPersonas" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="colId" prefWidth="50.0" text="ID" />
                                <TableColumn fx:id="colNombre" prefWidth="120.0" text="Nombre" />
                                <TableColumn fx:id="colApellido" prefWidth="120.0" text="Apellido" />
                                <TableColumn fx:id="colDni" prefWidth="100.0" text="DNI" />
                                <TableColumn fx:id="colEmail" prefWidth="180.0" text="Email" />
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                            </columnResizePolicy>
                        </TableView>
                    </children>
                </VBox>
                
                <!-- Nota informativa -->
                <HBox alignment="CENTER_LEFT" styleClass="info-nota">
                    <children>
                        <Label text="Nota: La persona seleccionada se agregar치 como participante (asistente) del evento." wrapText="true" />
                    </children>
                </HBox>
            </children>
            <padding>
                <Insets bottom="10.0" left="15.0" right="15.0" top="5.0" />
            </padding>
        </VBox>
    </center>
    
    <bottom>
        <!-- Botones de acci칩n -->
        <HBox alignment="CENTER_RIGHT" spacing="15.0" BorderPane.alignment="CENTER">
            <children>
                <Label fx:id="lblMensaje" styleClass="mensaje-error" HBox.hgrow="ALWAYS" />
                <Button fx:id="btnAgregar" mnemonicParsing="false" text="Agregar como Participante" onAction="#agregarParticipante" />
                <Button fx:id="btnCancelar" mnemonicParsing="false" text="Cancelar" onAction="#cancelar"/>
            </children>
            <padding>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
            </padding>
        </HBox>
    </bottom>
</BorderPane>